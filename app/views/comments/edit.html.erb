<div class = 'container'>
  <div class="row">
    <div class = "text-center">
      <h1>Edit comments</h1>
      <%= form_for([@article, @comment]) do |f| %>
        <p>
          <%= f.label :commenter %><br>
          <%= f.text_field :commenter %>
        </p>
        <p>
          <%= f.label :body %><br>
          <%= f.text_area :body %>
        </p>
        <p>
          <%= f.submit %>
        </p>
      <% end %>
    </div>
  </div>
</div>